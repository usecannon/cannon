{
  "name": "root",
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "lint:js": "eslint '{packages,examples}/**/*.{js,ts}'",
    "lint:sol": "solhint '{packages,examples}/*/{contracts,src}/**/*.sol'",
    "lint": "pnpm run '/^lint:(js|sol)/'",
    "lint:fix:js": "prettier --write '{packages,examples}/**/*.{js,ts}' && eslint --fix '{packages,examples}/**/*.{js,ts}'",
    "lint:fix:sol": "prettier --write '{packages,examples}/*/{contracts,src}/**/*.sol'",
    "lint:fix": "pnpm run '/^lint:fix:(js|sol)/'",
    "build": "pnpm -r --filter @usecannon/builder --filter @usecannon/cli --filter hardhat-cannon --filter @usecannon/api run build",
    "version-alpha": "lerna version prerelease --no-private",
    "version-patch": "lerna version patch --no-private",
    "version-minor": "lerna version minor --no-private",
    "version-major": "lerna version major --no-private",
    "publish": "lerna publish from-package --no-private",
    "publish-alpha": "lerna publish from-package --no-private --preid alpha --dist-tag alpha",
    "test": "pnpm -r --if-present --filter './packages/**' run test",
    "docgen-md": "pnpm -r --if-present run docgen",
    "changeset": "changeset"
  },
  "devDependencies": {
    "@babel/core": "^7.22.1",
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "@babel/plugin-transform-runtime": "^7.17.0",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "lerna": "^8.0.2",
    "nx": "^17.3.2",
    "nx-cloud": "^16.5.2",
    "prettier": "^2.5.1",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "react": "^18.2.0",
    "release-please": "^15.12.0",
    "solhint": "^3.4.1",
    "solhint-plugin-prettier": "^0.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3"
  },
  "license": "GNU GPL V3.0",
  "dependencies": {
    "@changesets/cli": "^2.26.2",
    "concat-md": "^0.5.1",
    "react-multi-ref": "^1.0.2",
    "scroll-into-view-if-needed": "^3.1.0"
  },
  "engineStrict": true,
  "engines": {
    "node": ">=20",
    "pnpm": ">=9"
  },
  "packageManager": "pnpm@9.8.0+sha512.8e4c3550fb500e808dbc30bb0ce4dd1eb614e30b1c55245f211591ec2cdf9c611cabd34e1364b42f564bd54b3945ed0f49d61d1bbf2ec9bd74b866fcdc723276"
}
