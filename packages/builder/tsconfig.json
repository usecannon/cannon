{
  "compilerOptions": {
    "noEmit": true,
    "target": "ES2016",
    "module": "CommonJS",
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": false,
    "rootDirs": ["./src"],
    "skipLibCheck": true
  },
  "include": [
    "./src",
    "../cli/run.ts",
    "../cli/import-from.ts",
    "test/fixtures",
    "test/fixtures.ts"
  ],
  "exclude": ["dist", "node_modules"]
}
