{
  "compilerOptions": {
    "noEmit": true,
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "rootDirs": ["./src"],
    "skipLibCheck": true
  },
  "include": ["./src", "../cli/run.ts", "../cli/import-from.ts"],
  "exclude": ["dist", "node_modules"]
}
